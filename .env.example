# Analytics Configuration
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-google-analytics-id-here
NEXT_PUBLIC_GOOGLE_ADS_ID=your-google-ads-id-here
NEXT_PUBLIC_GOOGLE_ADS_CONVERSION_LABEL=your-conversion-label-here

# GTM Configuration
NEXT_PUBLIC_GTM_ID=your-gtm-id-here

# SEO & Verification
NEXT_PUBLIC_GOOGLE_VERIFICATION=your-google-site-verification-code

# Email Configuration (Gmail)
# Only MTP_PASSWORD is required - Gmail settings are built-in
# MTP_PASSWORD should be your Gmail App Password (not your regular Gmail password)
# To get an App Password: Google Account > Security > 2-Step Verification > App passwords
MTP_PASSWORD=your-gmail-app-password

# Admin Configuration
# This is already set to s.sidikoff@gmail.com in the code
# ADMIN_EMAIL is optional and defaults to s.sidikoff@gmail.com
ADMIN_EMAIL=s.sidikoff@gmail.com
ADMIN_PASSWORD=your-secure-admin-password

# Debug Configuration (for production email testing)
DEBUG_SECRET=your-debug-secret-key
EMAIL_DEBUG_SECRET=your-email-debug-secret

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Database Configuration (Postgres/Supabase)
POSTGRES_URL=your-postgres-connection-string
POSTGRES_URL_NON_POOLING=your-postgres-non-pooling-connection-string
POSTGRES_PRISMA_URL=your-postgres-prisma-connection-string
POSTGRES_USER=your-postgres-user
POSTGRES_HOST=your-postgres-host
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DATABASE=your-postgres-database

# Additional Database URLs (for compatibility)
DATABASE_URL=your-database-connection-string
DATABASE_URL_UNPOOLED=your-unpooled-database-connection-string
